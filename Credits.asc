struct CreditPage {
  int LineCount;
  int Graphic;
  int LinesColor[10];
  String Lines[10];
  
  import function AddLine(int color, String text);
};

function CreditPage::AddLine(int color, String text)
{
  this.LinesColor[this.LineCount] = color;
  this.Lines[this.LineCount] = text;
  this.LineCount++;
}

