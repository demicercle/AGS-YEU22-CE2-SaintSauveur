// new module script

AudioClip* amb;
function on_event(EventType event, int data)
{
  if(event == eEventEnterRoomBeforeFadein)
  {
    AudioClip* lastAmb = amb;
    switch(data)
    {
      case 1: 
        amb = aTown;
      break;
      
      case 2:
      case 3:
        amb = aIndoor;
      break;
      
      case 4:
        amb = aGrotte_loop;
      break;
    }
    
    if(lastAmb != amb)
    {
      if(lastAmb != null) lastAmb.Stop();
      amb.Play();
    }
  }
}