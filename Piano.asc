// new module script

GUIControl* buttons[];
GUIControl* touches[];
AudioClip *clips[];
int pressedButton;
int timer = 10;
bool checkCode;
String code;

function PressButton(int i)
{
  pressedButton = i;
  touches[i].X +=1;
  touches[i].Y +=1;
  clips[i].Play();
  
  if(code == null)
    code = "";
  
  code = code.Append(String.Format("%d",i));
  
  SetTimer(1, timer);
  //Display("pressedButton=%d",i);
}

function game_start()
{
  pressedButton = -1;
  
  clips = new AudioClip[8];
  clips[0] = aPianoC1;
  clips[1] = aPianoD1;
  clips[2] = aPianoE1;
  clips[3] = aPianoF1;
  clips[4] = aPianoG1;
  clips[5] = aPianoA1;
  clips[6] = aPianoB1;
  clips[7] = aPianoC2;
  
  buttons = new GUIControl[8];
  buttons[0] = bPianoC1;
  buttons[1] = bPianoB1;
  buttons[2] = bPianoD1;
  buttons[3] = bPianoE1;
  buttons[4] = bPianoF1;
  buttons[5] = bPianoG1;
  buttons[6] = bPianoA1;
  buttons[7] = bPianoB1;
  
  touches = new GUIControl[8];
  touches[0] = bToucheC1;
  touches[1] = bToucheD1;
  touches[2] = bToucheE1;
  touches[3] = bToucheF1;
  touches[4] = bToucheG1;
  touches[5] = bToucheA1;
  touches[6] = bToucheB1;
  touches[7] = bToucheB1;
  
  for(int i = 0; i <= 7; i++)
  {
    touches[i].Clickable = false;
  }
  
  bPianoC2.Clickable = false;
}

function repeatedly_execute()
{
  if(checkCode)
  {
    checkCode = false;
    
    while(code.Length > PIANO_CODE.Length)
    {
      code = code.Substring(1, code.Length-1);
    }
    
    if(code == PIANO_CODE)
    {
      Display("Bravo !");
      Wait(30);
      gOrgue.Visible = false;
      CallRoomScript(1);
    }
  }
}

function repeatedly_execute_always()
{
  if(gOrgue.Visible)
  {
    if(IsTimerExpired(1))
    {
      touches[pressedButton].X -=1;
      touches[pressedButton].Y -=1;
      checkCode = true;
    }
  }
}
